<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_24"
    android:backgroundTint="@color/oxford_blue"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp">

    <ImageView
        android:contentDescription="Event Poster"
        android:id="@+id/eventCardPoster"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        app:srcCompat="@drawable/image_placeholder"
        />

    <TextView
        android:id="@+id/eventCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="16dp"
        android:text="@string/event_name"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:lineHeight="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/eventCardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="@string/event_date"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:lineHeight="24dp" />

        <TextView
            android:id="@+id/eventCardDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="@string/event_time"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:lineHeight="24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/eventCardStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="16dp"
        android:text="@string/event_status"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:lineHeight="24dp" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:layout_gravity="end">

            <Button
                android:id="@+id/buttonView"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/view_event"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonEventAction"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/button_event_action"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

</LinearLayout>