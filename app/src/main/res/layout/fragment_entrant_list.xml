<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntrantListFragment"
    android:layout_marginTop="?attr/actionBarSize"
    android:clipToPadding="false"
    android:paddingBottom="?attr/actionBarSize">

    <Button
        android:id="@+id/button_entrant_list_to_my_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_medium"
        android:text="Back"
        android:textColor="@color/oxford_blue"
        android:textSize="24sp"
        app:icon="@drawable/arrow_left_svgrepo_com"
        app:iconPadding="2dp"
        app:iconSize="32dp"
        app:iconTint="@color/black" />

    <ListView
        android:id="@+id/entrant_list"
        android:name="com.example.shopping_basket.EntrantListFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_entrant_list_to_my_event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/entrant_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
