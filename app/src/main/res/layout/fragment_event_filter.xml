<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EventFilterFragment"
    android:layout_marginTop="?attr/actionBarSize"
    android:paddingHorizontal="24dp"
    android:paddingBottom="32dp"
    android:paddingTop="24dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_apply_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp"
        android:text="Apply filter"
        android:layout_marginBottom="16dp"
        android:textColor="@color/oxford_blue"/>

    <TextView
        android:id="@+id/filter_keywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:text="Keywords"
        android:textColor="@color/oxford_blue"/>

    <EditText
        android:id="@+id/edit_text_event_keywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:hint="Enter keywords"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_view_filter_event_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:text="Registration period"
        android:textColor="@color/oxford_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/edit_text_reg_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:hint="Start date"/>

        <EditText
            android:id="@+id/edit_text_reg_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date"
            android:hint="End date"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:text="Event time"
        android:textColor="@color/oxford_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/edit_text_event_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:inputType="date"
            android:hint="Enter event time"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_cancel_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:backgroundTint="@color/oxford_light_grey"
            android:textColor="@color/oxford_blue"
            android:layout_marginEnd="16dp"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            app:cornerRadius="12dp"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/button_apply_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:backgroundTint="@color/oxford_blue"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            app:cornerRadius="12dp"
            android:paddingVertical="8dp"/>
    </LinearLayout>
</LinearLayout>