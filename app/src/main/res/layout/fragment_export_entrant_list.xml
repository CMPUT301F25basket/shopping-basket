<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportEntrantListFragment"
    android:layout_marginTop="?attr/actionBarSize"
    android:paddingHorizontal="24dp"
    android:paddingBottom="32dp"
    android:paddingTop="24dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_export_entrant_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export entrant list"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/oxford_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/edit_text_event_name_csv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:hint="event-name"/>

        <TextView
            android:id="@+id/text_view_export_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:text=".csv"
            android:textColor="@color/oxford_blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_cancel_csv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:backgroundTint="@color/oxford_light_grey"
            android:textColor="@color/oxford_blue"
            android:layout_marginEnd="16dp"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/button_export_csv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:text="Export"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</LinearLayout>