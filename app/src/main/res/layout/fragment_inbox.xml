<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InboxFragment">

    <!-- List of notifications, visible by default -->
    <ListView
        android:id="@+id/notification_list"
        android:name="com.example.shopping_basket.NotificationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:paddingBottom="?attr/actionBarSize"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_inbox_item" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/empty_inbox_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="empty_inbox_view,empty_inbox_desc"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/empty_inbox_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="No notifications found"
        android:src="@mipmap/empty_box_icon_foreground"
        app:layout_constraintBottom_toTopOf="@id/empty_inbox_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/empty_inbox_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your inbox is empty"
        android:textColor="@color/oxford_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_inbox_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
