<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SendNotificationFragment"
    android:paddingHorizontal="24dp"
    android:paddingVertical="16dp"
    android:layout_gravity="center">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Send notification to..."
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radio_all_entrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="All entrants"
            android:textSize="20sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_unselected_entrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Unselected entrants (waitlisted)"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_selected_entrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Selected entrants"
            android:textSize="20sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_text_notification_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:inputType="text"
        android:hint="Enter message..."
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        >

        <Button
            android:id="@+id/button_cancel_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/oxford_light_grey"
            android:fontFamily="@font/roboto"
            android:text="Cancel"
            android:textColor="@color/oxford_blue"
            android:textSize="16sp"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/button_send_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Send"
            android:textSize="16sp"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</LinearLayout>