<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/eventCreationFragment"
        android:name="com.example.shopping_basket.EventCreationFragment"
        android:label="Create event"
        tools:layout="@layout/fragment_event_creation" >
        <action
            android:id="@+id/action_eventCreationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_eventCreationFragment_to_eventQRFragment"
            app:destination="@id/eventQRFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shopping_basket.HomeFragment"
        android:label="Events"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_eventCreationFragment"
            app:destination="@id/eventCreationFragment"
            app:popUpTo="@id/eventCreationFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_inboxFragment"
            app:destination="@id/inboxFragment"
            app:popUpTo="@id/inboxFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myEventFragment"
            app:destination="@id/myEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.example.shopping_basket.InboxFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_inbox" >
        <action
            android:id="@+id/action_inboxFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.shopping_basket.EventDetailFragment"
        android:label="fragment_event_detail"
        tools:layout="@layout/fragment_event_detail">
        <action
            android:id="@+id/action_eventDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="shopping-basket://event/{event_id}" />
    </fragment>
    <fragment
        android:id="@+id/eventQRFragment"
        android:name="com.example.shopping_basket.EventQRFragment"
        android:label="fragment_event_qr"
        tools:layout="@layout/fragment_event_qr" >
        <action
            android:id="@+id/action_eventQRFragment_to_myEventFragment"
            app:destination="@id/myEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/myEventFragment"
        android:name="com.example.shopping_basket.MyEventFragment"
        android:label="fragment_my_event"
        tools:layout="@layout/fragment_my_event" >
        <action
            android:id="@+id/action_myEventFragment_to_eventQRFragment"
            app:destination="@id/eventQRFragment" />
        <action
            android:id="@+id/action_myEventFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>